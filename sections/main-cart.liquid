{% form 'cart', cart %}
  <h1>Cart</h1>

  <p>You have {{ cart.item_count }} items in your cart.</p>
  {% if cart.empty? %}
    <p>Your cart is empty.</p>
  {% else %}
    {% for item in cart.items %}
      <div>
        <img src="{{ item.image |  image_url: width: 500 }}" alt="" width="500" height="500" loading="lazy">
        <h2>{{ item.title }}</h2>
        <p>{{ item.final_line_price | money }}</p>
        <input type="text" name="updates[]" value="{{ item.quantity }}">
        <a href="{{ item.url_to_remove }}">Remove</a>
      </div>
    {% endfor %}
    <hr>
    <p>Total: {{ cart.total_price | money }}</p>
    <button type="submit" name="update">Update</button>
    <button type="submit" name="checkout">Checkout</button>
  {% endif %}
{% endform %}
